<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_study"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.piapps.flashcard.activity.StudyActivity"
    tools:showIn="@layout/activity_study">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:padding="16dp"
            android:text="Korean Vocabulary"
            android:lines="1"
            android:paddingRight="56dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textCount"
            android:padding="16dp"
            android:lines="1"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="56dp" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/playPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"></android.support.v4.view.ViewPager>

</RelativeLayout>
